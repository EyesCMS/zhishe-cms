<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.fzu.zhishe.core.dao.CmsActivityDAO">

  <resultMap id="ActivityPostResultMap" type="edu.fzu.zhishe.core.dto.CmsPostDTO">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="body" jdbcType="VARCHAR" property="content" />
    <result column="c_name" jdbcType="VARCHAR" property="clubName" />
    <result column="create_at" jdbcType="TIMESTAMP" property="createAt" />
    <result column="img_url" jdbcType="VARCHAR" property="imgUrl" />
    <result column="c_avatar_url" jdbcType="VARCHAR" property="avatarUrl" />
</resultMap>

<resultMap id="ActivitiesApplyMap" type="edu.fzu.zhishe.core.dto.CmsActivityApplyDTO">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="location" jdbcType="VARCHAR" property="location" />
    <result column="body" jdbcType="VARCHAR" property="content" />
    <result column="member_count" jdbcType="INTEGER" property="memberCount" />
    <result column="star_date" jdbcType="TIMESTAMP" property="startDate" />
    <result column="end_date" jdbcType="TIMESTAMP" property="endDate" />
    <result column="state" jdbcType="INTEGER" property="state" />
</resultMap>

  <select id="listActivityPost" parameterType="java.lang.Integer" resultMap="ActivityPostResultMap">
    SELECT
     a.id,
     a.title,
     a.body,
     c.`name` c_name,
     a.create_at,
     a.img_url,
     c.avatar_url c_avatar_url
    FROM
     cms_activity a
     LEFT JOIN cms_club c ON a.club_id = c.id
    WHERE
     a.state != 5
     <if test="clubId != null">
       AND a.club_id = #{clubId}
     </if>
    <if test="queryParam.keyword != null and queryParam.keyword != ''">
      AND title LIKE concat("%",#{queryParam.keyword},"%")
    </if>
    ORDER BY
     #{queryParam.sort} DESC
  </select>

  <select id="getActivityPostById" parameterType="java.lang.Integer" resultMap="ActivityPostResultMap">
    SELECT
     a.id,
     a.title,
     a.body,
     c.`name` c_name,
     a.create_at,
     a.img_url,
     c.avatar_url c_avatar_url
    FROM
     cms_activity a
     LEFT JOIN cms_club c ON a.club_id = c.id
    WHERE
     a.id = #{id} AND a.state != 5
  </select>
  <select id="selectActivitiesApply" parameterType="java.lang.Integer" resultMap="ActivitiesApplyMap">
    SELECT
     a.id,
     a.name,
     a.location,
     a.body,
     a.member_count,
     a.star_date,
     a.end_data,
     a.state
    FROM
     cms_activity a
    WHERE
     a.club_id = #{id}
  </select>

</mapper>
