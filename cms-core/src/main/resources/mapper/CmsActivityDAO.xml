<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.fzu.zhishe.core.dao.CmsActivityDAO">

  <resultMap id="BaseResultMap" type="edu.fzu.zhishe.core.dto.CmsActivityDetails">
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="body" jdbcType="VARCHAR" property="content" />
    <result column="create_at" jdbcType="TIMESTAMP" property="createAt" />
    <collection property="remarks" columnPrefix="ar_" ofType="edu.fzu.zhishe.core.dto.CmsRemarkDTO">
      <result property="content" column="content" />
      <result property="createAt" column="create_at" />
      <result property="username" column="username" />
    </collection>
  </resultMap>

  <resultMap id="BaseActivityResultMap" type="edu.fzu.zhishe.core.dto.CmsActivityDTO">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="body" jdbcType="VARCHAR" property="content" />
    <result column="c_name" jdbcType="VARCHAR" property="clubName" />
    <result column="create_at" jdbcType="TIMESTAMP" property="createAt" />
    <result column="img_url" jdbcType="VARCHAR" property="imgUrl" />
    <result column="c_avatar_url" jdbcType="VARCHAR" property="avatarUrl" />
  </resultMap>

  <select id="listActivity" parameterType="java.lang.Integer" resultMap="BaseActivityResultMap">
    SELECT
     a.id,
     a.title,
     a.body,
     c.`name` c_name,
     a.create_at,
     a.img_url,
     c.avatar_url c_avatar_url
    FROM
     cms_activity a
     LEFT JOIN cms_club c ON a.club_id = c.id
    WHERE
     1
    <if test="queryParam.keyword != null and queryParam.keyword != ''">
      AND title LIKE concat("%",#{queryParam.keyword},"%")
    </if>
    ORDER BY
     #{queryParam.sort} DESC
    LIMIT #{queryParam.page}, #{queryParam.limit}
  </select>

  <select id="getActivityById" parameterType="java.lang.Integer" resultMap="BaseActivityResultMap">
    SELECT
     a.id,
     a.title,
     a.body,
     c.`name` c_name,
     a.create_at,
     a.img_url,
     c.avatar_url c_avatar_url
    FROM
     cms_activity a
     LEFT JOIN cms_club c ON a.club_id = c.id
    WHERE
     a.id = #{id}
  </select>

</mapper>
