<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.fzu.zhishe.core.dao.CmsClubDAO">

  <sql id="Base_Column_List">
    id, `name`, chief_id, member_count, qq_group, slogan, avatar_url, official_state, `type`,
    grade, create_at
  </sql>

  <select id="listClubMember" parameterType="java.lang.Integer"
    resultMap="edu.fzu.zhishe.cms.mapper.SysUserMapper.BaseResultMap">
    SELECT
      u.id,
      u.username,
      u.PASSWORD,
      u.nickname,
      u.avatar_url,
      u.major,
      u.email,
      u.phone,
      u.slogan,
      u.login_question,
      u.login_answer,
      u.is_admin
    FROM
      cms_user_club_rel r,
      sys_user u
    WHERE
      r.club_id = #{id,jdbcType=INTEGER} AND r.user_id=u.id
  </select>

  <select id="listHotClub" parameterType="java.lang.Integer"
    resultMap="edu.fzu.zhishe.cms.mapper.CmsClubMapper.BaseResultMap">
    SELECT
      <include refid="Base_Column_List"/>
    FROM
      cms_club
    WHERE
     delete_status = 0
      LIMIT #{offset}, #{limit}
  </select>

  <select id="listClub" parameterType="java.lang.String"
          resultMap="ClubMap1">
    SELECT
      club.id,
      club.name,
      club.chief_id,
      u.nickname,
      club.avatar_url
    FROM
      cms_club club,
      sys_user u
    WHERE
      club.chief_id = u.id
      <if test="keyword != null and keyword != ''">
        AND club.name LIKE concat("%",#{keyword,jdbcType=VARCHAR},"%")
      </if>
  </select>

  <select id="getClubById" parameterType="java.lang.Integer"
          resultMap="ClubMap2">
    SELECT
      club.id,
      club.name,
      club.chief_id,
      u.nickname,
      club.avatar_url,
      club.slogan,
      club.member_count,
      club.qq_group
    FROM
      cms_club club,
      sys_user u
    WHERE
      club.chief_id = u.id AND club.id = #{id,jdbcType=INTEGER}
  </select>

  <select id="listJoinedClub" parameterType="java.lang.Integer"
          resultMap="ClubMap1">
    SELECT
      club.id,
      club.name,
      club.chief_id,
      u.nickname,
      club.avatar_url
    FROM
      cms_club club,
      sys_user u
    WHERE
      club.chief_id = u.id AND club.id IN
      (
      SELECT
      club_id
      FROM
      sys_user_role_rel
      WHERE
      role_id = 2 AND user_id = #{userId,jdbcType=INTEGER}
      )
  </select>

  <select id="listManagedClub" parameterType="java.lang.Integer"
                   resultMap="ClubMap1">
    SELECT
      club.id,
      club.name,
      club.chief_id,
      u.nickname,
      club.avatar_url
    FROM
      cms_club club,
      sys_user u
    WHERE
      club.chief_id = u.id AND club.id IN
      (
      SELECT
      club_id
      FROM
      sys_user_role_rel
      WHERE
      role_id = 3 AND user_id = #{userId,jdbcType=INTEGER}
      )
  </select>

  <select id="listJoinClubApply" parameterType="java.lang.Integer"
          resultMap="ClubMap3">
    SELECT
      a.user_id,
      a.club_id,
      club.name,
      a.reason,
      a.state
    FROM
      cms_club club,
      cms_club_join_apply a
    WHERE
    a.user_id = #{userId,jdbcType=INTEGER} AND club.id = a.club_id
  </select>

  <select id="listCreateClubApply" parameterType="java.lang.Integer"
          resultMap="ClubMap4">
    SELECT
      club_name,
      create_at,
      applicant,
      reason,
      state
    FROM
      cms_club_create_apply
    WHERE
    user_id = #{userId,jdbcType=INTEGER}
  </select>

  <resultMap id="ClubMap1" type="edu.fzu.zhishe.core.dto.CmsClubReturnData1">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="chief_id" jdbcType="INTEGER" property="chiefId" />
    <result column="nickname" jdbcType="VARCHAR" property="chiefName" />
    <result column="avatar_url" jdbcType="VARCHAR" property="avatarUrl" />
  </resultMap>

  <resultMap id="ClubMap2" type="edu.fzu.zhishe.core.dto.CmsClubReturnData2">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="chief_id" jdbcType="INTEGER" property="chiefId" />
    <result column="nickname" jdbcType="VARCHAR" property="chiefName" />
    <result column="avatar_url" jdbcType="VARCHAR" property="avatarUrl" />
    <result column="slogan" jdbcType="VARCHAR" property="slogan" />
    <result column="member_count" jdbcType="INTEGER" property="memberCount" />
    <result column="qq_group" jdbcType="VARCHAR" property="qqGroup" />
  </resultMap>

  <resultMap id="ClubMap3" type="edu.fzu.zhishe.core.dto.CmsClubReturnData3">
    <id column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="club_id" jdbcType="INTEGER" property="clubId" />
    <result column="name" jdbcType="VARCHAR" property="clubName" />
    <result column="reason" jdbcType="VARCHAR" property="reason" />
    <result column="state" jdbcType="INTEGER" property="state" />
  </resultMap>

  <resultMap id="ClubMap4" type="edu.fzu.zhishe.core.dto.CmsClubReturnData4">
    <id column="club_name" jdbcType="VARCHAR" property="clubName" />
    <result column="create_at" jdbcType="TIMESTAMP" property="createAt" />
    <result column="applicant" jdbcType="VARCHAR" property="applicant" />
    <result column="reason" jdbcType="VARCHAR" property="reason" />
    <result column="state" jdbcType="INTEGER" property="state" />
  </resultMap>



</mapper>
